<?xml version="1.0" encoding="UTF-8" ?>
<project basedir="." default="archive_all" name="zk_composite">
	<property environment="env" />
	<property name="debuglevel" value="source,lines,vars" />
	<property name="target" value="1.5" />
	<property name="source" value="1.5" />
	<property name="source_path" value="src_composite" />
	<property name="temp_dir" value="build_temp" />
	<property name="dist" value="build_jar" />
	
	
	<path id="required_lib">
		<fileset dir="WebContent/WEB-INF/lib/">
			<include name="*.jar" />
		</fileset>
		<fileset dir="lib/">
			<include name="*.jar" />
		</fileset>
	</path>
	<path id="srcbuild.classpath">
        <pathelement location="${dist}/classes"/>
        <path refid="required_lib"/>
    </path>

	<target name="init">
		<mkdir dir="${dist}/classes" />
		<mkdir dir="${dist}/lib" />
		<mkdir dir="${dist}/src" />
		<copy includeemptydirs="false" todir="${dist}/classes">
			<fileset dir="${source_path}">
				<exclude name="**/*.launch" />
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>
	
	<target name="clean">
        <delete dir="${dist}"/>
    </target>

	<target name="build-project" depends="init">
		<echo message="${ant.project.name}: ${ant.file}" />
		<javac debug="true" debuglevel="${debuglevel}" destdir="${dist}/classes"
			source="${source}" target="${target}">
			<src path="${source_path}" />
			<classpath refid="srcbuild.classpath" />
		</javac>
	</target>

	<target name="build_jar" depends="build-project">
		<jar destfile="${dist}/lib/zkcomposite.jar" basedir="${dist}/classes">
			<manifest>
				<attribute name="Main-Class" value="org.zkoss.composite" />
			</manifest>
		</jar>
	</target>
	
	<target name="archive_all" depends="build_jar" >
		<zip destfile="${dist}/ZK-Composite.zip">
			<zipfileset dir="${dist}/lib" prefix="lib"/>
			<zipfileset dir="lib" prefix="lib"/>
			
			<zipfileset dir="WebContent/" prefix="WebContent">
				<exclude name="WEB-INF/lib/*.jar"/>
			</zipfileset>
			
			<zipfileset dir="${dist}/lib" prefix="WebContent/WEB-INF/lib"/>
			<zipfileset dir="lib" prefix="WebContent/WEB-INF/lib"/>
			
			<zipfileset dir="src" prefix="src_demo"/>
			<zipfileset dir="src_composite" prefix="src_composite"/>
			<zipfileset dir="src_test" prefix="src_test"/>
			
		</zip>
	</target>
	
</project>